{% comment %}
  Custom Wholesale Registration Page Template
  Replaces BSS B2B Solution
  Template: page.wholesale-registration.liquid
{% endcomment %}

<div class="page-width">
  <div class="page-header">
    <h1 class="page-title">{{ page.title }}</h1>
    {% if page.content != blank %}
      <div class="page-content rte">
        {{ page.content }}
      </div>
    {% endif %}
  </div>

  {% comment %} Custom Wholesale Registration Form {% endcomment %}
  {% render 'wholesale-registration-form' %}
</div>

<style>
.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.page-header {
  text-align: center;
  margin: 60px 0 40px 0;
}

.page-title {
  font-size: 3rem;
  color: #2b2b2b;
  margin-bottom: 20px;
  font-weight: 700;
}

.page-content {
  font-size: 1.1rem;
  color: #666;
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .page-width {
    padding: 0 15px;
  }
  
  .page-header {
    margin: 40px 0 30px 0;
  }
  
  .page-title {
    font-size: 2.2rem;
  }
}
</style>

